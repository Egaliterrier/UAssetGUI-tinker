<Window x:Class="UAssetManager.Views.MarkdownViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{DynamicResource MarkdownViewerWindow.Title}" Height="600" Width="800"
        WindowStartupLocation="CenterOwner">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <WebBrowser x:Name="MarkdownWebBrowser" Grid.Row="0" Margin="10"/>
        
        <!-- Button Area -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="{DynamicResource Text.Close}" Width="80" Height="30" Margin="5" Click="Close_Click" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
