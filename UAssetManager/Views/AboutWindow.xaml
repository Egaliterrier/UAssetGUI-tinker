<Window x:Class="UAssetManager.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{DynamicResource AboutWindow.Title}" Height="420" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    
    <Window.Resources>
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
        
        <Style x:Key="SubtitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Foreground" Value="Gray"/>
        </Style>
        
        <Style x:Key="InfoStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="9"/>
        </Style>
        
        <Style x:Key="ButtonPanelStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"/>
            <Setter Property="BorderThickness" Value="0,1,0,0"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content Area -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="20">
            <StackPanel>
                <!-- Title -->
                <TextBlock Text="UAssetManager" Style="{StaticResource TitleStyle}"/>
                
                <!-- Subtitle -->
                <TextBlock Text="{Binding DisplayVersion}" Style="{StaticResource SubtitleStyle}"/>
                
                <!-- Description -->
                <TextBlock Text="{DynamicResource AboutWindow.Subtitle}" Style="{StaticResource SubtitleStyle}"/>

                <!-- Information Content -->
                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="{DynamicResource AboutWindow.Description}" Style="{StaticResource InfoStyle}"/>
                    <TextBlock Text="" Style="{StaticResource InfoStyle}"/>
                    
                    <TextBlock Text="{DynamicResource AboutWindow.MainFeatures}" Style="{StaticResource InfoStyle}" FontWeight="Bold"/>
                    <TextBlock Text="{DynamicResource AboutWindow.Feature1}" Style="{StaticResource InfoStyle}"/>
                    <TextBlock Text="{DynamicResource AboutWindow.Feature2}" Style="{StaticResource InfoStyle}"/>
                    <TextBlock Text="{DynamicResource AboutWindow.Feature3}" Style="{StaticResource InfoStyle}"/>
                    <TextBlock Text="{DynamicResource AboutWindow.Feature4}" Style="{StaticResource InfoStyle}"/>
                    <TextBlock Text="{DynamicResource AboutWindow.Feature5}" Style="{StaticResource InfoStyle}"/>
                    <TextBlock Text="{DynamicResource AboutWindow.Feature6}" Style="{StaticResource InfoStyle}"/>
                    <TextBlock Text="" Style="{StaticResource InfoStyle}"/>
                    
                    <TextBlock Text="{DynamicResource AboutWindow.TechStack}" Style="{StaticResource InfoStyle}" FontWeight="Bold"/>
                    <TextBlock Text="• .NET 8.0" Style="{StaticResource InfoStyle}"/>
                    <TextBlock Text="• WPF (Windows Presentation Foundation)" Style="{StaticResource InfoStyle}"/>
                    <TextBlock Text="{DynamicResource AboutWindow.Tech1}" Style="{StaticResource InfoStyle}"/>
                    <TextBlock Text="{DynamicResource AboutWindow.Tech2}" Style="{StaticResource InfoStyle}"/>
                    <TextBlock Text="" Style="{StaticResource InfoStyle}"/>
                    
                    <TextBlock Text="{DynamicResource AboutWindow.BasedOn}" Style="{StaticResource InfoStyle}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Button Panel -->
        <Border Grid.Row="1" Style="{StaticResource ButtonPanelStyle}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="{DynamicResource AboutWindow.ViewLicense}" Style="{StaticResource ButtonStyle}" Click="ViewLicense_Click"/>
                <Button Content="{DynamicResource AboutWindow.ViewNotice}" Style="{StaticResource ButtonStyle}" Click="ViewNotice_Click"/>
                <Button Content="{DynamicResource AboutWindow.Close}" Style="{StaticResource ButtonStyle}" Click="Close_Click" IsDefault="True"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
