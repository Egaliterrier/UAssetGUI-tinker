<Window x:Class="UAssetManager.Views.AddPropertyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:c="clr-namespace:UAssetManager.Controls"
        mc:Ignorable="d"
        Title="添加自定义属性" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner"
        MinWidth="420" MinHeight="220">
    
    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="属性名称"/>
        <TextBox x:Name="NameBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8" MinWidth="260"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="属性类型"/>
        <ComboBox x:Name="TypeBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8" IsEditable="True"
                  StaysOpenOnEdit="True" IsTextSearchEnabled="True" IsTextSearchCaseSensitive="False"
                  MinWidth="260"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Top" Text="属性值"/>
        <Border Grid.Row="2" Grid.Column="1" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="4">
            <ContentPresenter x:Name="EditorHost" Margin="6"/>
        </Border>

        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button x:Name="OkButton" Width="88" Margin="0,0,8,0" IsDefault="True" Click="OkButton_Click">确定</Button>
            <Button Width="88" IsCancel="True">取消</Button>
        </StackPanel>
    </Grid>
</Window>

